        <section class="m-0 class=row">
                <div class="card mb-0 col-12">
                <div class="row g-0">
                    <div class="col-md-2">
                    <img src="{{image}}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-4 md-1">
                    <div class="card-body">
                        <h6 class="card-title">{{name}}</h6>
                        <p class="card-text"><small class="text-body-secondary">{{description}}</small></p>
                    </div>
                    </div>
                    <div class="col-md-2">
                    <div class="card-body">
                        {{#with price}}
                        <div class="card-text">{{title}}</div>
                        <h6 class="card-title">{{value}}</h6>
                        {{/with}}
                    </div>
                    </div>
                    <div class="col-md-2">
                    <div class="card-body">
                        <div class="card-text">{{amount}}</div>
                    </div>
                    </div>
                    <div class="col-md-2">
                        {{#each buttons}}
                    <div class="card-body">               
                        <button type="button" class="btn btn-{{#if isPrimary}}primary{{/if}}{{#if isDanger}}danger{{/if}}" link="{{link}}" >{{text}}</button>       
                    </div>
                        {{/each}}
                    </div>
                </div>
                </div>
        </section>