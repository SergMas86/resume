{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
            <section>

                    {{> title data="My work's history" big=true}}

                <div>
                    <p>
                        {{#each works}}
                            <ul>
                                <li>
                                    <div><strong>{{position}}</strong></div>
                                        <div>
                                            {{duration.from}} - 
                                            {{#if duration.to}} {{duration.to}} {{else}} (still working) {{/if}}
                                        </div>
                                    <div>
                                        {{#if company.url}} {{> link text=company.name href=company.url blank=true noLine=true }} {{else}} <b>{{company.name}}</b>
                                        {{/if}}
                                    </div>
                                    <br>
                                    <div> <strong> Projects:{{projectAmount}} </strong> </div>
                                    <ul>
                                        {{#each project}}
                                        <li>
                                            <div>
                                                 {{> link text=name href=url blank=true noLine=true}}
                                            </div>
                                            <br>
                                                <div>
                                                    <P>
                                                        <div>About: {{about}}</div>
                                                        <br>
                                                        <em> Project stacks:
                                                            <ul>
                                                                {{#each stacks}}
                                                                    <li>
                                                                        {{name}}
                                                                    </li>
                                                                {{/each}}
                                                            </ul>
                                                        <div>Project stacks:{{stackAmount}}</div>
                                                        </em>

                                                        <br>
                                                        <em> Project awards:
                                                            <ul>
                                                                {{#each awards}}
                                                                    <li>
                                                                        {{name}}
                                                                    </li>
                                                                {{/each}}
                                                            </ul>
                                                        </em>
                                                    </P>
                                                </div>
                                        </li>
                                        {{/each}}
                                    </ul>
                                    <br>
                                </li>
                            </ul>
                        {{/each}}
                    </p>
                </div>
            </section>
        </main>
    {{/with}}
</div>

