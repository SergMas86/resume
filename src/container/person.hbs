{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
        <main>
            <section>
                <div><h1> {{> title data= name big=true}} </h1> </div>
                <div>{{age}} full years, {{gender}}</div>
                <div><address>Adress:{{#with address}} {{street}}, {{city}}, {{state}}, {{zip}}, {{country}} {{/with}}</address></div>
                <br>
                <div>
                    <ul>
                        <div> <strong> education:</strong> </div>
                        {{#each education}}
                        <li>
                            <div>{{degree}} by specialty {{major}} in {{university}}, Year graduation: {{graduationYear}}</div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div>
                    <ul>
                        <div> <strong> work Experience:</strong> </div>
                        {{#each workExperience}}
                        <li>
                            <div><b>
                                {{startDate}} - 
                                {{#if endDate}} {{endDate}} {{else}} (still working) {{/if}}
                                {{title}} in {{company}} ({{industry}}, founded {{year_founded}})
                            </b></div>
                            <div><em>responsibilities: {{responsibilities}}</em><div>
                            <div>
                                <br>
                                <ul>
                                    <div><strong>Еmployees:</strong></div>
                                            <div>
                                                
                                            {{#each employees}}
                                            <li>
                                                <details>
                                                    <summary><b>{{name}}</b> (department: {{department}}, position: {{position}}) </summary>
                                                    <p>
                                                        {{#each projects}}
                                                        <div>
                                                                <div>
                                                                    <uL><b>PROJECTS:</b></uL>
                                                                        <li>                                                                    
                                                                            <strong>{{name}}</strong>
                                                                                <div>{{description}}, status:{{status}}</div>
                                                                                </div>
                                                                                <details>
                                                                                    <summary> More information </summary>
                                                                                        {{#each teams}}
                                                                                            <p>
                                                                                                <div>
                                                                                                    <ul>
                                                                                                        <div><strong>Team: {{team_name}}</strong></div>
                                                                                                        
                                                                                                                <li>
                                                                                                                    {{#with team_leader}} 
                                                                                                                    <div>{{title}}: {{name}}, {{email}}</div>
                                                                                                                    {{/with}}
                                                                                                                </li> 
                                                                                                                 <li> Team members:
                                                                                                                    <ul>
                                                                                                                     {{#each team_members}}
                                                                                                                            <li>
                                                                                                                                <div>{{name}} {{title}}, 
                                                                                                                                <div><em>skills: {{skills}}, {{email}}</em></div>
                                                                                                                                <details> 
                                                                                                                                    <summary> Projects: </summary>
                                                                                                                                        <p>
                                                                                                                                            {{#each projects}}
                                                                                                                                                <ul> {{name}} 
                                                                                                                                                    <div><em>{{description}}, technologies: {{technologies}}</em></div>
                                                                                                                                                    <div>Team_members: </div>
                                                                                                                                                        {{#each team_members}}
                                                                                                                                                        <li> 
                                                                                                                                                            {{name}} {{title}}
                                                                                                                                                        </li>
                                                                                                                                                        {{/each}}


                                                                                                                                                </ul>
                                                                                                                                            {{/each}}
                                                                                                                                        </p>                                                                                                                                    
                                                                                                                                </details>
                                                                                                                            </li>
   
                                                                                                                    </ul>
                                                                                                                        {{/each}}
                                                                                                                    </li>

                                                                                                    </ul>
                                                                                                            
                                                                                                </div>

                                                                                            </p>
                                                                                      {{/each}}

                                                                </details>
                                                        </div>
                                                        {{/each}}
                                                        

                                                    </p>
                                                </details>
                                            </li>
                                            {{/each}}
                                            </div>
                                </ul>                          
                            </div>
                        </li>
                        <br>
                        <br>
                        {{/each}}

                    </ul>
                </div>
                <br>

                <div>
                    <p>
                        {{#each works}}
                            <ul>
                                <li>
                                    <div><strong>{{position}}</strong></div>
                                        <div>
                                            {{duration.from}} - 
                                            {{#if duration.to}} {{duration.to}} {{else}} (still working) {{/if}}
                                        </div>
                                    <div>
                                        {{#if company.url}} {{> link text=company.name href=company.url blank=true noLine=true }} {{else}} <b>{{company.name}}</b>
                                        {{/if}}
                                    </div>
                                    <br>
                                    <div> <strong> Projects:{{projectAmount}} </strong> </div>
                                    <ul>
                                        {{#each project}}
                                        <li>
                                            <div>
                                                 {{> link text=name href=url blank=true noLine=true}}
                                            </div>
                                            <br>
                                                <div>
                                                    <P>
                                                        <div>About: {{about}}</div>
                                                        <br>
                                                        <em> Project stacks:
                                                            <ul>
                                                                {{#each stacks}}
                                                                    <li>
                                                                        {{name}}
                                                                    </li>
                                                                {{/each}}
                                                            </ul>
                                                        <div>Project stacks:{{stackAmount}}</div>
                                                        </em>

                                                        <br>
                                                        <em> Project awards:
                                                            <ul>
                                                                {{#each awards}}
                                                                    <li>
                                                                        {{name}}
                                                                    </li>
                                                                {{/each}}
                                                            </ul>
                                                        </em>
                                                    </P>
                                                </div>
                                        </li>
                                        {{/each}}
                                    </ul>
                                    <br>
                                </li>
                            </ul>
                        {{/each}}
                    </p>
                </div>
            </section>
        </main>
    {{/with}}
</div>

